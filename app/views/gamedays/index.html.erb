<p id="notice"><%= notice %></p>

<h1>Listing Gamedays</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>League</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gamedays.each do |gameday| %>
      <tr>
        <td><%= gameday.number %></td>
        <td><%= gameday.league.name %></td>
        <td><%= link_to 'Show', gameday %></td>
        <td><%= link_to 'Edit', edit_gameday_path(gameday) %></td>
        <td><%= link_to 'Destroy', gameday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gameday', new_gameday_path %>
